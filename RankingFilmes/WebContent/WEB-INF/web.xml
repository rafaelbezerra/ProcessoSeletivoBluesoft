<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>vote-no-filme</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>iniciar</servlet-name>
    <servlet-class>br.com.rankingfilmes.controller.IniciarVotacao</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>iniciar</servlet-name>
    <url-pattern>/iniciar.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>continuar</servlet-name>
    <servlet-class>br.com.rankingfilmes.controller.ContinuarVotando</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>continuar</servlet-name>
    <url-pattern>/continuarVotando.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>computar</servlet-name>
    <servlet-class>br.com.rankingfilmes.controller.ComputarVoto</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>computar</servlet-name>
    <url-pattern>/computar.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>exibir</servlet-name>
    <servlet-class>br.com.rankingfilmes.controller.ExibirResultados</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>exibir</servlet-name>
    <url-pattern>/exibirResultados.do</url-pattern>
  </servlet-mapping>
</web-app>